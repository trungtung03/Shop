<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:scaleType="fitXY"
                    android:id="@+id/imageThucPhamDoUong"
                    android:layout_width="@dimen/size9"
                    android:layout_height="@dimen/size9"
                    android:src="@drawable/not_image" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/textTenThucPhamDoUong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="tên thực phẩm"
                        android:textColor="#000000"
                        android:textSize="13sp" />
                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/textGiaThucPhamDoUong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="giá thực phẩm"
                        android:textColor="#6200EA"
                        android:textSize="13sp" />
                </ScrollView>

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:gravity="center"
                        android:id="@+id/textDiaChiDoUong"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="địa chỉ quán ăn"
                        android:textAppearance="?android:attr/textAppearance"
                        android:textColor="#850606" />
                </ScrollView>
            </LinearLayout>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>